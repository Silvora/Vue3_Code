{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es2016",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@my-vue/*": ["packages/*/src"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "packages/**/*.d.ts"
   ]
}